{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Med",
  "version": "0.1.1",
  "identifier": "com.med-iptv.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Iptv",
        "minWidth": 1920,
        "minHeight": 1080,
        "decorations": false,
        "fullscreen": true,
        "resizable": false,
        "maximized": true,
        "visible": false
      },
      {
        "width": 1920,
        "height": 1080,
        "decorations": false,
        "fullscreen": true,
        "url": "splashscreen.html",
        "label": "splashscreen"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
