{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Med",
  "version": "0.1.1",
  "identifier": "com.med-iptv.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "fullscreen": true,
        "resizable": true,
        "decorations": false,
        "visible": false,
        "center": true,
        "skipTaskbar": false
      },
      {
        "width": 1920,
        "height": 1080,
        "decorations": false,
        "fullscreen": true,
        "url": "splashscreen.html",
        "label": "splashscreen"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage"],
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.png"]
  }
}
